<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
	<link rel='stylesheet' href='/stylesheets/main.css' />
	<link rel='stylesheet' href='/stylesheets/bootstrap.min.css' />
  </head>
  <body>
  <script src="https://www.gstatic.com/firebasejs/4.1.3/firebase.js"></script>
	<script>
	  // Initialize Firebase
	  var config = {
	    apiKey: "<%= app.apiKey %>",
	    authDomain: "<%= app.authDomain %>",
	    databaseURL: "<%= app.databaseURL %>",
	    projectId: "<%= app.projectId %>",
	    storageBucket: "<%= app.storageBucket %>",
	    messagingSenderId: "<%= app.messagingSenderId %>"
	  };
	  firebase.initializeApp(config);
	  var storage = firebase.storage();

	  function getURL()
	  {
	    var ref = storage.ref("<%= data.Images %>");
	    var link = ref.getDownloadURL().then(function(url){
	      var img = document.getElementById("<%= key %>");
	      img.src = url;
	    });
	  }
	</script>
  
  <header id="header"><!--header-->
		<div class="header_top"><!--header_top-->
		<ul class="nav nav-pills">
        <img src="images/web1.jpg" width=70% height=90px>
	    </div>

	</header>
	<div class="shade2">
	<h3 align=center><u> Old Details</u></h3>
	<center><img src="" id= "<%= key %>" alt="no img" height=20% width=20% align="center">
	<script type="text/javascript">
		getURL();
	</script>
	</center>
	<table>
	
	<tr><td><b>Product_ID :</td><td> <%= data.Product_ID %> </tr>
