	  <tr><td>Colour*</td><td> 		<input type=textbox name="Colour" value="<%= data.Colour %>" class="in12" size="30"><br><br>
	  <tr><td>Size* </td><td>		<input type=textbox name="Size" value="<%= data.Size %>" class="in12" size="30"><br><br>
	  <tr><td>Deal* </td><td>		<input type=textbox	name="Deal" value="<%= data.Deal %>" class="in12" size="30"><br><br>

      <tr><td>Image* </td><td>	<input type="button"  class="in12" value="Select" onclick="document.getElementById('file').click()">
